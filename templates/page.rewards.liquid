{% section 'sk-hero-section-rewards' %}

<div class="section-container grey">
  <div class="col-container-rewards">
    <h3 class="jc-h3-heading">how to earn rewards points</h3>

    <div class="col-container-rewards-inner">

      <div class="rewards-right-wrapper">
        <div class="rewards-inner no-padding">
          <img class="rewards-img" src="https://cdn.shopify.com/s/files/1/0107/7431/5072/files/RR-reskin-loyalty_discounts_AST_buying_icon.svg?v=1658851662">
