<!-- /templates/customers/reset_password.liquid -->
<div class="jc-login-page-wrapper jc-login-page-wrapper-reset">

<div class="grid">
  <div class="w-container">
    <div class="grid__item large--one-third push--large--one-third text-center">

      <div class="form-vertical" style="text-align: center;">
        {% form 'reset_customer_password' %}

          <header class="section-header jc-reset-pw-heading-wrapper">
            <h1 class="jc-section-heading jc-section-heading-login">{{ 'customer.reset_password.title' | t }}</h1>
            <p class="jc-forgot-pw-text">{{ 'customer.reset_password.subtext' | t: email: email }}</p>
            
          </header>

          {{ form.errors | default_errors }}

          <label for="ResetPassword" class="hidden-label">{{ 'customer.reset_password.password' | t }}</label>
          <input type="password" value="" name="customer[password]" id="ResetPassword" class="input-full{% if form.errors contains 'password' %} error{% endif %} jc-form-input-login w-input" placeholder="{{ 'customer.reset_password.password' | t }}">

          <label for="PasswordConfirmation" class="hidden-label">{{ 'customer.reset_password.password_confirm' | t }}</label>
          <input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="input-full{% if form.errors contains 'password_confirmation' %} error{% endif %} jc-form-input-login w-input" placeholder="{{ 'customer.reset_password.password_confirm' | t }}">

          <div class="text-center">
            <input type="submit" class="jc-login-btn w-button" value="{{ 'customer.reset_password.submit' | t }}">
          </div>

        {% endform %}
      </div>

    </div>
  </div>
</div>

</div>