<div class="jc-hero-wrapper home">
  <div class="jc-hero-placement"></div>
  <div class="jc-hero-content-wrapper home">
    <div class="w-container mobile">
      <h1 class="jc-main-heading less-margin">The CBD That Works.<span class="hero-super-script">TM</span></h1>
      <div class="jc-hero-btn-section"><a href="{{section.settings.button_url}}" class="jc-hero-btn w-button">{{section.settings.button_text}}</a></div>
      <div class="review-link-wrapper">
        <img class="stars-img" src="https://cdn.shopify.com/s/files/1/0107/7431/5072/files/RR-reskin-home_AST_Reviews_stars.png?v=1662674881">
        <a class="review-link" href="#reviews-section">600+ GOOGLE REVIEWS</a>
      </div>
    </div>
  </div>
  {% comment %}<div class="jc-hero-location-text">Estes Park, CO</div>{% endcomment %}{% comment %}<img src="https://cdn.shopify.com/s/files/1/0107/7431/5072/files/mountain-graphic-min.png?468" srcset="https://cdn.shopify.com/s/files/1/0107/7431/5072/files/mountain-graphic-min-p-500.png?468 500w, https://cdn.shopify.com/s/files/1/0107/7431/5072/files/mountain-graphic-min.png?468 1600w" sizes="(max-width: 1600px) 100vw, 1600px" alt="" class="jc-hero-mountain-img">{% endcomment %}
</div>

<script>
  // The function actually applying the offset
function offsetAnchor() {
    if(location.hash.length !== 0) {
        window.scrollTo(window.scrollX, window.scrollY - 100);
    }
}

// This will capture hash changes while on the page
window.addEventListener("hashchange", offsetAnchor);

// This is here so that when you enter the page with a hash,
// it can provide the offset in that case too. Having a timeout
// seems necessary to allow the browser to jump to the anchor first.
window.setTimeout(offsetAnchor, 1); // The delay of 1 is arbitrary and may not always work right (although it did in my testing).
</script>


