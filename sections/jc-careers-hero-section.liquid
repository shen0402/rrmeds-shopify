<div class="hero-wrapper-careers" {% if section.settings.bg_image %}style="background-image: url({{ section.settings.bg_image | img_url: '1600x' }});"{% endif %}>
  <div class="hero-heading-wrapper-careers">
    <h1 class="hero-heading-careers">{{section.settings.heading_text}}</h1>
  </div>
</div>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
      {
        "label": "Main Image",
        "id": "bg_image",
        "type": "image_picker"
      },
      {
         "type": "text",
         "id": "heading_text",
         "default": "Careers With R&R Medicinals",
         "label": "Heading Top"
      }
  ] 
}
{% endschema %}